import java.util.Scanner;
class pattern
{
public static void main(String args[])
{
Scanner input=new Scanner(System.in);
int row=input.nextInt();
int val=1,i,j,k;
for(i=0;i<row;i++)
{
for(j=0;j<row-i-1;j++)
{
System.out.print(" ");
}
for(k=0;k<=i;k++)
{
if(i==0||k==0)
val=1;
else
val=val*(i-k+1)/k;
System.out.print(val +" ");
}
System.out.print("\n");
}
}
}
